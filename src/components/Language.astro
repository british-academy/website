---
import Button from "~/components/Button.astro"
import Icon from "~/components/Icon.astro"
import { languages } from "~/utils/i18n"
// block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white
---

<Button
  type="button"
  data-dropdown-toggle="language-dropdown"
  rounded="md"
  class="px-2 py-1 sm:px-4 sm:py-2 text-sm cursor-pointer rtl:space-x-reverse hover:bg-slate-100 dark:hover:bg-slate-700"
>
  <Icon name="flag-en" class="w-3 h-3 sm:w-5 sm:h-5 rounded-full me-3" />
  <Icon name="flag-ar" class="w-3 h-3 sm:w-5 sm:h-5 rounded-full me-3" />
  <Icon name="flag-fr" class="w-3 h-3 sm:w-5 sm:h-5 rounded-full" />
</Button>

<div
  class="z-50 hidden my-4 list-none bg-white divide-y divide-slate-100 rounded-lg shadow dark:bg-slate-700"
  id="language-dropdown"
>
  <ul class="py-2 font-medium" role="none">
    {
      Object.entries(languages).map(([key, value]) => (
        <li>
          <Button
            type="link"
            href={`/${key}/`}
            class="w-full px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-600 dark:hover:text-white"
            role="menuitem"
          >
            <Icon name={`flag-${key}`} class="h-3.5 w-3.5 rounded-full me-2 rtl:ms-2" /> {value}
          </Button>
        </li>
      ))
    }
  </ul>
</div>
